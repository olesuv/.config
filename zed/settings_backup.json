{
    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-latest"
        },
        "version": "2"
    },
    "telemetry": { "diagnostics": false,
                   "metrics": false },
    // basics
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "theme": {
        "mode": "system",
        "light": "One Dark",
        "dark": "One Dark"
    },
    "buffer_font_fallbacks": ["Hack Nerd Font"],
    "buffer_font_family": "Hack Nerd Font",
    "disabled_in": ["comment", "string"],
    "tabs": { "git_status": true },
    "terminal": {
        "copy_on_select": true,
        "font_family": "Hack Nerd Font",
        "line_height": "comfortable"
    },
    // prettier
    "format_on_save": "on",
    "ensure_final_newline_on_save": true,
    "formatter": {
        "code_actions": {
            "source.fixAll.eslint": true,
            "source.organizeImports": true
        }
    },
    "languages": {
        "TypeScript": {
            "tab_size": 2,
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "JavaScript": {
            "tab_size": 2,
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "Python": { "tab_size": 4 },
        "JSONC": { "tab_size": 4 },
        "JSON": { "tab_size": 4 },
        "JSDoc": { "tab_size": 4 }
    },
    // vim mode
    "vim_mode": true
}
