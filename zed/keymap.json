[
  // vim
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j j": "vim::NormalBefore"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == insert",
    "bindings": {
      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste",
      "ctrl-a": "editor::SelectAll"
    }
  },
  {
    "context": "vim_mode == insert || true",
    "bindings": {
      "alt-space": "editor::ShowCompletions"
    }
  },
  // workspace
  {
    "bindings": {
      "c f": "project_panel::NewFile",
      "d f": "project_panel::Delete",
      "r f": "project_panel::Rename",
      "ctrl-r": "workspace::ToggleRightDock",
      "ctrl-l": "workspace::ToggleLeftDock",
      "ctrl-/": "terminal_panel::Toggle"
    }
  }
]
